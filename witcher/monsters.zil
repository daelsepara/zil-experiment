    (DESC "The Bear")
    (SYNONYM BEAR BEARS BEAST BEASTS MONSTER)
    (HIT-DAMAGE 20)
    (ACTION BEAR-F)
    (FLAGS NARTICLEBIT)>

<MONSTER WATER-HAG
    (DESC "Water Hag")
    (SYNONYM HAG WITCH MONSTER NECROPHAGE)
    (ADJECTIVE WATER)
    (HIT-DAMAGE 40)
    (ACTION WATER-HAG-F)>

<MONSTER WRAITH-JAENY
    (DESC "Jaeny, The Wraith")
    (SYNONYM JENNY JAENY WRAITH)
    (HIT-DAMAGE 30)
    (ACTION JAENY-F)
    (FLAGS NARTICLEBIT)>

<ROUTINE ALGHOUL-F ()
    <MONSTER-ACTION ,ALGHOUL ,HP-ALGHOUL ,SILVER-SWORD ,PRSI ,NECROPHAGE-OIL>>

<ROUTINE BANDITS-F ()
    <MONSTER-ACTION ,BANDITS ,HP-BANDITS ,STEEL-SWORD ,PRSI ,HANGEDMANS-VENOM>>

<ROUTINE GRIFFIN-F ()
    <MONSTER-ACTION ,GRIFFIN ,HP-GRIFFIN ,SILVER-SWORD ,PRSI ,HYBRID-OIL>>

<ROUTINE NEKKER-F ()
    <MONSTER-ACTION ,NEKKER ,HP-NEKKER ,SILVER-SWORD ,PRSI ,OGROID-OIL>>

<ROUTINE BEAR-F ()
    <MONSTER-ACTION ,BEAR ,HP-BEAR ,STEEL-SWORD ,PRSI ,BEAST-OIL>>

<ROUTINE GHOULS-F ()
