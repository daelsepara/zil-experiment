<OBJECT-TEMPLATE MONSTER =
    OBJECT
        (HIT-POINTS 0)
        (HIT-DAMAGE 0)
        (FLAGS MONSTERBIT PERSONBIT)>

<MONSTER ALGHOUL
    (DESC "The Alghoul")
    (SYNONYM ALGHOUL ALGHOULS GHOUL GHOULS)
    (HIT-DAMAGE 30)
    (ACTION ALGHOUL-F)
    (FLAGS NARTICLEBIT)>

<MONSTER GHOULS
    (DESC "Ghouls")
    (SYNONYM GHOUL GHOULS)
    (HIT-DAMAGE 20)
    (ACTION GHOULS-F)
    (FLAGS PLURALBIT)>

<MONSTER BANDITS
    (DESC "Bandits")
    (SYNONYM BANDITS THUGS)
    (HIT-DAMAGE 10)
    (ACTION BANDITS-F)
    (FLAGS PLURALBIT)>

<MONSTER GRIFFIN
    (DESC "The Griffin")
    (SYNONYM GRIFFIN GRIFFINS MONSTER)
    (HIT-DAMAGE 50)
    (ACTION GRIFFIN-F)
    (FLAGS NARTICLEBIT)>

<MONSTER NEKKER
    (DESC "Nekker")
